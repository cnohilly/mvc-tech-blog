<div class="container text-center">
    <div class="row py-3">
        <div class="col">
            {{> article-card post}}
        </div>
    </div>
    <div class="container px-md-5">
        {{#each post.comments as |comment| }}
        <div class="row py-1">
            <div class="col">
                {{> single-comment comment}}
            </div>
        </div>
        {{/each}}
    </div>
</div>